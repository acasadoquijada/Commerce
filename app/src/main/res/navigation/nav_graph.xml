<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.sdos.commerce.ui.fragments.EmployeeFragment"
        android:label="login_fragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailEmployeeFragment"
            app:destination="@id/detailEmployeeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.sdos.commerce.ui.fragments.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_taskFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sdos.commerce.ui.fragments.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/detailEmployeeFragment"
        android:name="com.sdos.commerce.ui.fragments.DetailEmployeeFragment"
        android:label="fragment_detail_employee"
        tools:layout="@layout/fragment_detail_employee" >
        <argument
            android:name="employee"
            app:argType="com.sdos.commerce.entities.Employee"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.sdos.commerce.ui.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailTaskFragment"
        android:name="com.sdos.commerce.ui.fragments.DetailTaskFragment"
        android:label="DetailTaskFragment"
        tools:layout="@layout/fragment_detail_task"/>
</navigation>