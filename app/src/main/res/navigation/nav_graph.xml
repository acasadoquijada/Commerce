<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.sdos.commerce.ui.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/employeeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/employeeFragment"
        android:name="com.manday.management.ui.fragments.EmployeeFragment"
        android:label="main_fragment"
        tools:layout="@layout/fragment_employee">
        <action
            android:id="@+id/action_mainFragment_to_detailEmployeeFragment"
            app:destination="@id/detailEmployeeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.sdos.commerce.ui.fragments.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_taskFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sdos.commerce.ui.fragments.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_fruitFragment"
            app:destination="@id/fruitFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailEmployeeFragment"
        android:name="com.sdos.commerce.ui.fragments.EmployeeDetailFragment"
        android:label="fragment_detail_employee"
        tools:layout="@layout/fragment_employee_detail" >
        <argument
            android:name="employee"
            app:argType="com.manday.management.domain.EmployeeModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/detailTaskFragment"
        android:name="com.sdos.commerce.ui.fragments.DetailTaskFragment"
        android:label="DetailTaskFragment"
        tools:layout="@layout/fragment_detail_task">
        <argument
            android:name="task"
            app:argType="com.manday.management.data.entities.TaskEntity"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/fruitFragment"
        android:name="com.manday.fruit.ui.fragment.FruitFragment"
        android:label="FruitFragment"
        tools:layout="@layout/fragment_fruit"/>
</navigation>